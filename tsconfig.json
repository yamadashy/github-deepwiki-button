{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "entrypoints/**/*",
    "components/**/*",
    "utils/**/*",
    "styles/**/*",
    "wxt.config.ts",
    ".wxt/wxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".output"
  ]
}